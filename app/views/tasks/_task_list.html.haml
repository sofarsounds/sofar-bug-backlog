- if tasks.empty?
  %span.text-warning There are no tasks!
- else
  %table.table.table-hover
    %thead
      %tr
        %th Title
        %th Days Elapsed
        %th Priority
        %th # Reported
        %th Completed
        %th Actions
    %tbody
      - tasks.each do |task|
        %tr{id: task.id, class:"#{task.late? ? 'danger' : ''}"}
          %td
            %strong
              - unless task.url.blank?
                = link_to task.title, task.url
              - else
                = task.title
          %td.text= task.days_elapsed_since_creation
          %td.text= readable_priority(task)
          %td.text
            %span{id: "#{task.id}-inc"}
              = task.reported_count
            = link_to "+", inc_task_path(task), remote: true, class: "btn btn-default btn-xs"
          %td.text-success= task.completed

          %td
            = link_to "Edit", edit_task_path(task), remote: true, class: "btn btn-warning btn-xs"
            = link_to "X", task_path(task), remote: true, method: :delete, class: "btn btn-danger btn-xs", data: {confirm: "Are you sure you want to delete task #{task.title}?"}
